include header.pug

div(class='wrap')
  div(class='content')
    header(class='site-header deep-orange darken-4')
      include site_header
    include nav
    div(class='container')
      div(class='row')
        div(class='col s12')
          h3 Cart
          div(class='cart-nav')
        div(class='col s12')
          h3 Create order 
        div(class='col s6')
          form#lite-shop-order(action="")
                  div(class='form-control')
                    label(for='username') Name
                    input(
                        type='text',
                        id='username',
                        placeholder='Enter your name',
                        )
                  div(class='form-control')
                    label(for='phone') Phone
                    input(
                        type='text',
                        id='phone',
                        placeholder='+380505555555',
                        )
                  div(class='form-control')
                    label(for='email') Email
                    input(
                        type='text',
                        id='email',
                        placeholder='mail@example.com',
                        )
                  div(class='form-control')
                    label(for='address') Address
                    textarea(
                        id='address',
                        placeholder='where are you',
                        )
                  div(class='form-control')
                    label(for='rule') 
                      input(
                          type='checkbox',
                          id='rule',
                          value='1'
                          ) 
                      span  Terms and Conditions
                  div(class='form-control text-right')
                    button(class='waves-effect waves-light btn', type='submit') Finish order
  include footer.pug
  script(src='js/src/order.js')

